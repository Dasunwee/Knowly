<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add/Update Quiz Section -->
    <EditText
        android:id="@+id/etQuizName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quiz Name"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etQuizDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quiz Description"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAddQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Quiz"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnUpdateQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Quiz"
        android:layout_marginBottom="32dp"/>

    <!-- List of Quizzes -->
    <ListView
        android:id="@+id/listViewQuizzes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>