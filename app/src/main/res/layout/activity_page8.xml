<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resourced"
    android:padding="16dp">

    <!-- Top Bar with Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:padding="8dp">

        <!-- Home Icon -->

        <ImageButton
            android:id="@+id/home_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/myhome"
            android:contentDescription="Home Icon" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/profilegreen"
            android:contentDescription="Profile Icon" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources"
        android:textSize="46sp"
        android:textColor="@color/dark_green"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Section Title -->
    <TextView
        android:id="@+id/section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cyber Security"
        android:textSize="24sp"
        android:background="@color/dark_green"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <!-- Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/section_title"
        android:layout_marginTop="26dp">

        <!-- YouTube Section -->

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:baselineAlignBottom="false"
            android:textAlignment="center"
            app:srcCompat="@drawable/youtube" />

        <TextView
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autoLink="web"
            android:text="https://youtu.be/inWWhr5tnEA\nhttps://youtu.be/v7BNtpw53AA"
            android:textColor="#0000FF" />

        <!-- GitHub Section -->

        <ImageView
            android:id="@+id/git"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/git" />

        <!-- W3Schools Section -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autoLink="web"
            android:text="https://github.com/topics/cybersecurity"
            android:textColor="#0000FF" />

        <ImageView
            android:id="@+id/w3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/w3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="https://www.w3schools.com/cybersecurity/"
            android:textColor="#0000FF" />

    </LinearLayout>

</RelativeLayout>
