<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">



        <!-- Profile Card -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"

            android:elevation="4dp"
            >

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="17dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="150dp"
                android:layout_marginBottom="33dp"
                android:text="Profile"
                android:textColor="@color/dark_green"
                android:textSize="44sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/home_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/myhome"
                android:contentDescription="Home Icon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"

            android:elevation="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:contentDescription="User Picture"
                android:src="@drawable/profilegreen"
               />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="User Name"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="sample.email@gmail.com"
                android:textColor="@color/dark_green"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnedit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/dark_green"
                android:elevation="4dp"
                android:padding="8dp"
                android:text="Edit Profile"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Enroll Courses Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"

            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/enroll_courses_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enrolled Courses"
                android:textColor="@color/dark_green"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/course1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cyber Security - 50%"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/course2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Python - 33%"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/level_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:contentDescription="Level Icon"
                android:src="@drawable/progress"
                android:tint="#004CAF50" />

            <TextView
                android:id="@+id/level_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Your Level - 28%"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Buttons: Delete Profile & Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/delete_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#8B0000"
                android:elevation="4dp"
                android:text="Delete Profile"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <Button

                android:id="@+id/logout_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/dark_green"
                android:elevation="4dp"
                android:text="Log Out"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
