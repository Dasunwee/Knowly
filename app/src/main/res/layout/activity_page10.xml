<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizzes"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESOURCES"
        android:textSize="36sp"
        android:textColor="@color/dark_green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp">

        <Button
            android:id="@+id/uxUiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UX / UI"
            android:backgroundTint="@color/dark_green"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/cyberSecurityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cyber Security"
            android:backgroundTint="@color/dark_green"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/appDevButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Development"
            android:backgroundTint="@color/dark_green"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/pythonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python"
            android:backgroundTint="@color/dark_green"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/basicNetworkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Network"
            android:backgroundTint="@color/dark_green"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="35dp"
        android:background="@drawable/profilegreen"
        android:contentDescription="Profile Icon" />

</RelativeLayout>
