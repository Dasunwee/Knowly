<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/courses"
    android:padding="16dp">



    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/profilegreen"
        android:contentDescription="Profile Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COURSES"
        android:textSize="46sp"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp" />

    <!-- UX/UI Button -->
    <Button
        android:id="@+id/btn_ux_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UX / UI"
        android:backgroundTint="@color/dark_green"
        android:textColor="#FFFFFF"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:padding="12dp" />

    <!-- Cyber Security Button -->
    <Button
        android:id="@+id/btn_cyber_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cyber Security"
        android:backgroundTint="@color/dark_green"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_ux_ui"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- App Development Button -->
    <Button
        android:id="@+id/btn_app_development"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Development"
        android:backgroundTint="@color/dark_green"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_cyber_security"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Python Button -->
    <Button
        android:id="@+id/btn_python"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Python"
        android:backgroundTint="@color/dark_green"       android:textColor="#FFFFFF"
        android:layout_below="@id/btn_app_development"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Basic Network Button -->
    <Button
        android:id="@+id/btn_basic_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Network"
        android:backgroundTint="@color/dark_green"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_python"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</RelativeLayout>
