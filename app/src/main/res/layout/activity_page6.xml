<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCF2CC"
    android:padding="16dp">

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/home_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_home"
        android:contentDescription="Home Icon" />

    <!-- Profile Button -->
    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Profile Button"
        android:src="@drawable/ic_profile" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COURSES"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#228B22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp" />

    <!-- UX/UI Button -->
    <Button
        android:id="@+id/btn_ux_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UX / UI"
        android:backgroundTint="#228B22"
        android:textColor="#FFFFFF"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:padding="12dp" />

    <!-- Cyber Security Button -->
    <Button
        android:id="@+id/btn_cyber_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cyber Security"
        android:backgroundTint="#228B22"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_ux_ui"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- App Development Button -->
    <Button
        android:id="@+id/btn_app_development"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Development"
        android:backgroundTint="#228B22"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_cyber_security"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Python Button -->
    <Button
        android:id="@+id/btn_python"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Python"
        android:backgroundTint="#228B22"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_app_development"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Basic Network Button -->
    <Button
        android:id="@+id/btn_basic_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Network"
        android:backgroundTint="#228B22"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btn_python"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</RelativeLayout>
